---
/**
 * Página de Registro.
 * @Desc: En ella se renderiza el formulario de registro, contiene los 4 campos necesarios pare registrarse.
 * @author: Josue Padilla
 * @Date: 20-06-2024
 */
import MainLayout from '../layouts/MainLayout.astro';
---

<style>
  /* Estilos para el botón con efecto hover */
  .btn-hover-lighten {
    background-color: #33405f;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-hover-lighten:hover {
    background-color: #5c6a8d;
  }

  /* Estilos para el contenedor del input */
  .input-container {
    position: relative;
  }

  /* Estilos para el icono del input */
  .input-icon {
    position: absolute;
    right: 10px;
    top: 72%;
    transform: translateY(-50%);
    pointer-events: none;
    transition: opacity 0.2s ease;
    color: #0F172A;
  }

  /* Estilos para el input */
  input {
    width: 100%;
    padding: 0.5rem 2rem 0.5rem 0.75rem;
    border: 1px solid #0c4a6e;
    border-radius: 0.375rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  input:focus {
    border-color: #147ea8;
    box-shadow: 0 0 0 3px rgba(20, 126, 168, 0.3);
    outline: none;
  }

  input:focus + .input-icon {
    opacity: 0;
  }

  input::placeholder {
    color: #b0c4de;
  }

  /* Estilo para el fondo principal */
  .principal {
    background-color: #0F172A;
  }
</style>

<!-- Componente MainLayout -->
<MainLayout>
  <section class="container mx-auto py-16">
    <div class="max-w-md mx-auto p-8 rounded shadow-md rounded-lg principal">
      <h2 class="text-3xl font-bold mb-4 text-center text-white">Registro</h2>
      <form>
        <div class="input-container mb-4">
          <label for="username" class="block mb-2 text-white font-bold ml-3">Nombre de usuario</label>
          <input type="text" id="username" name="username" class="w-full p-2 border rounded" required placeholder="Introduce tu nombre de usuario">
          <i class="fa-solid fa-user-secret input-icon"></i>
        </div>
        <div class="input-container mb-4">
          <label for="email" class="block mb-2 text-white font-bold ml-3">Correo electrónico</label>
          <input type="email" id="email" name="email" class="w-full p-2 border rounded" required placeholder="Introduce tu correo electrónico">
          <i class="fa-solid fa-envelope input-icon"></i>
        </div>
        
        <div class="input-container mb-4">
          <label for="password" class="block mb-2 text-white font-bold ml-3">Contraseña</label>
          <input type="password" id="password" name="password" class="w-full p-2 border rounded" required placeholder="Introduce tu contraseña">
          <i class="fa-solid fa-key input-icon"></i>
        </div>
        <div class="input-container mb-4">
          <label for="confirm-password" class="block mb-2 text-white font-bold ml-3">Repetir contraseña</label>
          <input type="password" id="confirm-password" name="confirm-password" class="w-full p-2 border rounded" required placeholder="Repite tu contraseña">
          <i class="fa-solid fa-key input-icon"></i>
        </div>
        
        <div class="mt-5 flex justify-center">
          <a href="/login" class="btn-hover-lighten shadow-md">Registrarme</a>
        </div>
      </form>
      <p class="mt-5 text-center text-white">¿Ya tienes una cuenta? <a href="/login" class="font-bold">Iniciar sesión</a></p>
    </div>
  </section>
</MainLayout>