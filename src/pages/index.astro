---
/**
 * Página principal.
 * @Desc: Muestra la información inicial del webapp.
 * @author: Josue Padilla
 * @Date: 20-06-2024
 */
import MainLayout from '../layouts/MainLayout.astro';
---

<style>
  /* Estilos para el botón con efecto hover */
  .btn-hover-lighten {
    background-color: #0f172a;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-hover-lighten:hover {
    background-color: #21335c;
  }

  /* Estilos para el icono de la landing page */
  .iconoLanding {
    font-size: 10rem;
    color: #0F172A;
  }
</style>

<!-- Componente MainLayout -->
<MainLayout>
  <section class="container mx-auto py-16">
    <i class="fa-solid fa-vault iconoLanding mb-8"></i>
    <h1 class="text-4xl font-bold mb-4">Bienvenido a AES-256 Encryptor</h1>
    <p class="text-lg mb-8">Protege tus archivos con la máxima seguridad usando encriptación AES-256.</p>
    <a href="/login" class="btn-hover-lighten">Comencemos</a>
  </section>
</MainLayout>