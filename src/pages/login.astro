---
/**
 * Página de Login.
 * @Desc: Contiene el formulario de inicio de sesión, solicita los dos campos para el inicio de sesión.
 * @author: Josue Padilla
 * @Date: 20-06-2024
 */
 import MainLayout from '../layouts/MainLayout.astro';
---

<style>
  /* Estilos para el botón con efecto hover */
  .btn-hover-lighten {
    background-color: #33405f;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-hover-lighten:hover {
    background-color: #5c6a8d;
  }

  /* Estilos para el contenedor del input */
  .input-container {
    position: relative;
  }

  /* Estilos para el icono del input */
  .input-icon {
    position: absolute;
    right: 10px;
    top: 72%;
    transform: translateY(-50%);
    pointer-events: none;
    transition: opacity 0.2s ease;
    color: #0F172A;
  }

  /* Estilos para el input */
  input[type="email"], input[type="password"] {
    width: 100%;
    padding: 0.5rem 2rem 0.5rem 0.75rem;
    border: 1px solid #0c4a6e;
    border-radius: 0.375rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  input[type="email"]:focus, input[type="password"]:focus {
    border-color: #147ea8;
    box-shadow: 0 0 0 3px rgba(20, 126, 168, 0.3);
    outline: none;
  }

  input[type="email"]:focus + .input-icon, input[type="password"]:focus + .input-icon {
    opacity: 0;
  }

  input[type="email"]::placeholder, input[type="password"]::placeholder {
    color: #b0c4de;
  }

  /* Estilo para el fondo principal */
  .principal {
    background-color: #0F172A;
  }

  /* Estilos para el checkbox */
  .checkbox-container {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .checkbox-label {
    margin-left: 0.5rem;
    color: white;
    font-size: 0.875rem;
  }

  .checkbox-input {
    width: 1rem;
    height: 1rem;
    border: 1px solid #0c4a6e;
    border-radius: 0.25rem;
    appearance: none;
    background-color: white;
    cursor: pointer;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .checkbox-input:checked {
    background-color: #33405f;
    border-color: #33405f;
  }
</style>

<!-- Componente MainLayout -->
<MainLayout>
  <section class="container mx-auto py-16">
    <div class="max-w-md mx-auto p-8 rounded shadow-md rounded-lg principal">
      <h2 class="text-3xl font-bold mb-4 text-center text-white">Iniciar sesión</h2>
      <form>
        <div class="input-container mb-4">
          <label for="email" class="block mb-2 text-white font-bold ml-3">Nombre de usuario</label>
          <input type="email" id="email" name="email" class="w-full p-2 border rounded" required placeholder="Introduce tu nombre de usuario">
          <i class="fa-solid fa-envelope input-icon"></i>
        </div>
        
        <div class="input-container mb-4">
          <label for="password" class="block mb-2 text-white font-bold ml-3">Contraseña</label>
          <input type="password" id="password" name="password" class="w-full p-2 border rounded" required placeholder="Introduce tu contraseña">
          <i class="fa-solid fa-key input-icon"></i>
        </div>
        
        <div class="checkbox-container">
          <input type="checkbox" id="remember" name="remember" class="checkbox-input">
          <label for="remember" class="checkbox-label">Recordarme</label>
        </div>

        <p class="mt-5 text-center text-white">
          <a href="/forgotPassword" class="font-bold">¿Olvidaste tu contraseña?</a>
        </p>
        
        <div class="mt-3 flex justify-center">
          <a href="/login" class="btn-hover-lighten shadow-md">Iniciar sesión</a>
        </div>
      </form>
      
      <p class="mt-5 text-center text-white">
        ¿No tienes una cuenta? <a href="/register" class="font-bold">Regístrate</a>
      </p>
    </div>
  </section>
</MainLayout>